DirectorLink = "https://github.com/pouriya-jahanbakhsh/director.git".
DirectorTag = "17.6.4".
Director = {director, ".*", {git, DirectorLink, {tag, DirectorTag}}}.

Rebar2Deps = {deps, [Director]}.

